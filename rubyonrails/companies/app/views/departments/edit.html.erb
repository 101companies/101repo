<div class="headline"><h2>101companies Ruby on Rails Web App</h2></div>
<div class="content">
  <h1>Editing department</h1>
  <%= render 'form' %>
  <hr>
  <div class="attr">
  	<p>
  		<h3>Manager:</h3>
  	</p>
  	<% @department.employees.each do |employee| %>
  		<p>
    		<% if (employee.isManager?) %>
    			<%=	employee.name %>
    			<%= link_to 'Remove', employee, :confirm => 'Are you sure?', :method => :delete %>
    		<% end %> 
  		</p>
  	<% end %>
  </div>
  <hr>
  <div class="attr">
  	<p>
  		<h3>Sub departments:</h3>
  	</p>
  	<% @department.departments.each do |subdepartment| %>
  		<p>
    		<%= subdepartment.name %>
    		<%= link_to 'Remove', subdepartment, :confirm => 'Are you sure?', :method => :delete %>
  		</p>
  	<% end %>
  </div>
  <b>Add a department:</b>
   <%= form_for([@department, @department.departments.build]) do |f| %>
  	  <div class="field">
    	<%= f.label :name %><br />
    	<%= f.text_field :name %>
  	  </div>
  	  <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
  <hr>
  <div class="attr">
  	<p>
  		<h3>Employees:</h3>
  	</p>
  	<% @department.employees.each do |employee| %>
  		<p>
    		<% if (!employee.isManager?) %>
    			<%=	employee.name %>
    			<%= link_to 'Remove', employee, :confirm => 'Are you sure?', :method => :delete %>
    		<% end %> 
  		</p>
  	<% end %>
  </div>
  <b>Add an employee:</b>
   <%= form_for([@department, @department.employees.build]) do |f| %>
  	  <div class="field">
    	<%= f.label :name %><br />
    	<%= f.text_field :name %>
    	Set as manager?
    	<%= f.check_box :isManager %>
  	  </div>
  	  <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
  <%= link_to 'Show', @department %> |
  <%= link_to 'Back', departments_path %>
</div>
