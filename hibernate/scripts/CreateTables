drop table DEPT if exists
drop table EMPLOYEE if exists
create table DEPT (DEPT_ID bigint generated by default as identity (start with 1), name varchar(255), MANAGER_ID bigint, UPPER_DEPT_ID bigint, primary key (DEPT_ID))
create table EMPLOYEE (EMPLOYEE_ID bigint generated by default as identity (start with 1), name varchar(255), address varchar(255), salary double, DEPT_ID bigint, primary key (EMPLOYEE_ID))
alter table DEPT add constraint FK1FF6456AA21A21 foreign key (UPPER_DEPT_ID) references DEPT
alter table DEPT add constraint FK1FF6457DC728BF foreign key (MANAGER_ID) references EMPLOYEE
alter table EMPLOYEE add constraint FK75C8D6AEF2F6DCBE foreign key (DEPT_ID) references DEPT